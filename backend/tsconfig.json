{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/account": [
        "libs/account/src"
      ],
      "@app/account/*": [
        "libs/account/src/*"
      ],
      "@app/rbac": [
        "libs/rbac/src"
      ],
      "@app/rbac/*": [
        "libs/rbac/src/*"
      ]
    }
  }
}
