{
  "name": "apartment-rental-platform-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/web/test/jest-e2e.json",
    "postinstall": "patch-package",
    "knex": "knex --knexfile knexfile.ts",
    "migrate": "yarn knex migrate:latest",
    "migrate:rollback": "yarn knex migrate:rollback",
    "migrate:make": "yarn knex migrate:make -- -x ts",
    "seed": "yarn knex seed:run",
    "seed:make": "yarn knex seed:make -- -x ts",
    "commit": "cd .. && npx cz"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.13",
    "@nestjs/event-emitter": "^0.0.3",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.13",
    "@willsoto/casbin-objection-adapter": "^0.2.2",
    "async-retry-decorator": "^1.8.0",
    "bcryptjs": "^2.4.3",
    "casbin": "^5.6.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "connect-session-knex": "^2.1.0",
    "crypto-random-string": "3.3.1",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "express-session": "^1.17.1",
    "helmet": "^4.4.1",
    "knex": "^0.95.6",
    "luxon": "^1.26.0",
    "mailgun-js": "^0.22.0",
    "objection": "^2.2.15",
    "passport": "^0.4.1",
    "passport-custom": "^1.1.1",
    "passport-local": "^1.0.0",
    "patch-package": "^6.4.7",
    "pg": "^8.6.0",
    "postinstall-postinstall": "^2.1.0",
    "qs": "^6.10.1",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@trivago/prettier-plugin-sort-imports": "^2.0.2",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.20",
    "@types/luxon": "^1.26.2",
    "@types/mailgun-js": "^0.22.12",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/account/(.*)": "<rootDir>/libs/account/src/$1",
      "@app/account": "<rootDir>/libs/account/src",
      "@app/rbac/(.*)": "<rootDir>/libs/rbac/src/$1",
      "@app/rbac": "<rootDir>/libs/rbac/src",
      "@app/notification/(.*)": "<rootDir>/libs/notification/src/$1",
      "@app/notification": "<rootDir>/libs/notification/src"
    },
    "setupFiles": [
      "./jest-setup-file.ts"
    ]
  }
}
